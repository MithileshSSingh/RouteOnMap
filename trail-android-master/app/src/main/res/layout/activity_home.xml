<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amalbit.animationongooglemap.HomeActivity">

  <Button
      android:text="PROJECTION BASED ROUTE"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:id="@+id/btn_projection"
      app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toTopOf="@+id/btn_polyline"/>
  <Button
      android:text="Polyline based Route"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:id="@+id/btn_polyline"
      app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="8dp"/>
  <ImageView
      android:layout_width="164dp"
      android:layout_height="144dp" app:srcCompat="@drawable/ic_app"
      android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toTopOf="@+id/btn_projection"/>
</android.support.constraint.ConstraintLayout>
